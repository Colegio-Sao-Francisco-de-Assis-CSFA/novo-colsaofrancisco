---

interface Props{
    title: string;
}

const{title} = Astro.props;

---


<h1 class="font-medium text-2xl text-white relative">
    {title}
</h1>


<style>
    h1::before{
        content: '';
        position: absolute;
        width: clamp(4.25rem, 25%, 6rem );
        background-color: var(--design-2);
        border-radius: 100px;
        height: .3rem;
        bottom: -0.2rem;
        left: -0.2rem;
        z-index: 20;
    }
</style>