---
const parceiros = [
    {
        src: "/images/parceiros/GoogleEducation.png",
        alt: "Google Education logo",
    },
    {
        src: "/images/parceiros/Kumon.png",
        alt: "Kumon logo",
    },
    {
        src: "/images/parceiros/NotasDeOuro.png",
        alt: "NotasDeOuro logo",
    },
    {
        src: "/images/parceiros/SasEducation.png",
        alt: "SasEducation logo",
    },
    {
        src: "/images/parceiros//ViaMaker.png",
        alt: "ViaMaker logo",
    },
    {
        src: "/images/parceiros/Yazigi.png",
        alt: "Yazigi logo",
    },
    {
        src: "/images/parceiros/RaiaLivre.png",
        alt: "RaiaLivre logo",
    },
];
---
<div class="parceiros">
    <div class="cs-container">
        {
            parceiros.map((item) => (
                <img
                    class="cs-logo"
                    src={item.src} 
                    alt={item.alt} 
                    width="287"
                    height="65"
                    loading="lazy"
                    decoding="async"
                />
            ))
        }
    </div>
</div>


