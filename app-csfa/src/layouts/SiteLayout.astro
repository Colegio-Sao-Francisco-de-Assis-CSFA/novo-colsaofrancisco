import Footer from '@/components/Site/Sections/Footer.astro';
import FloatLinks from '@/components/Site/FloatContent/FloatLinks/FloatLinks.astro';

const {
	title,
	description
} = Astro.props;


---

<!doctype html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8"/>
