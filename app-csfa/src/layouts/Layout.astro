---
const {title, description} = Astro.props;
import logoImage from '../../public/logo-cfsa.svg';
import FloatLinks from '../components/FloatLinks.astro';
import MenuPrincipal from '../components/MenuPrincipal.astro';

---

<!doctype html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
		<link rel="shortcut icon" href={logoImage.src} type="image/svg">
		<title>{title}</title>
	</head>
	<body class="bg-slate-800">		
		<!-- <MenuPrincipal /> -->
		<!-- <FloatLinks /> -->

		<div class="container mx-auto max-w-[1980px]">
			<slot />
		</div>


	</body>
</html>

