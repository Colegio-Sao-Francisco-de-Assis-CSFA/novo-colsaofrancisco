---
const {title, description} = Astro.props;
import logoImage from '../../public/logo-cfsa.svg';
import FloatLinks from '../components/FloatLinks.astro';
import MenuPrincipal from '../components/MenuPrincipal.astro';

---

<!doctype html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,1,0";>
		<link rel="stylesheet" href="./awesome-font.css">
		<link rel="shortcut icon" href={logoImage.src} type="image/svg">
		<title>{title}</title>
	</head>
	<body class="bg-[#121B3D]">
		
		<MenuPrincipal/>
		<FloatLinks />
		<div class="container mx-auto max-w-[1980px]">
			<slot />
		</div>


	</body>
</html>


<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap');
	:root {
		/* Cores do projeto */
		--dark-blue:#121B3D;
		--lowopacity-dark-blue:hsla(227, 54%, 15%, 0.85);
		--primary-color: #2C3C94;
		--second-color: #486EDB;
		--light-cyan: #08B0D1; 
		--pink-sho:#F6337F;
		--pink-warm:#E87EA1;
		--pretty-yellow:#FFC826;
		--dark-gray:#4e4e4e;
		--lowopacity-dark-gray:#4e4e4ea6;
		--warm-gray:#E0E0E0;
		--light-gray:#F5F7F5;

		/* Tamanhos de fontes */
		--font-sm: 12px;
		--font-smz: 16px;
		--font-md: 20px;
		--font-mdz: 24px;
		--font-lg: 32px;
		--font-lgz: 48px;

		/* Component - Header Assets */
		/* 13px - 16px */
		--topperFontSize: clamp(0.8125rem, 1.6vw, 1rem);
		/* 31px - 49px */
		--headerFontSize: clamp(1.9375rem, 3.9vw, 3.0625rem);
		--bodyFontSize: 1rem;
		/* 60px - 100px top and bottom */
		--sectionPadding: clamp(3.75rem, 7.82vw, 6.25rem) 1rem;
	}
	*, *:before, *:after {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	html {   
		font-family:  Open Sans, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell,'Helvetica Neue', sans-serif;
		scroll-behavior: smooth;
	}
	body{
		background-color: var(--warm-gray);
	}
	


	/* Material Symbol - Google Icon Assets */
	.material-symbols-outlined {
	font-variation-settings:
	'FILL' 1,
	'wght' 400,
	'GRAD' 0,
	'opsz' 24
	} 

	
	@media screen and (min-width: 1024px) {
		*::-webkit-scrollbar {
		height: 9px;
		width: 4px;
		}
		*::-webkit-scrollbar-track {
		border-radius: 20px;
		background-color: #9d9e9c00;
		}
		*::-webkit-scrollbar-track:hover {
		background-color: #66666600;
		}
		*::-webkit-scrollbar-track:active {
		background-color: #121b3d00;
		}
		*::-webkit-scrollbar-thumb {
		border-radius: 5px;
		background-color: #486EDB;
		}
		*::-webkit-scrollbar-thumb:hover {
		background-color: #486EDB;
		}
		*::-webkit-scrollbar-thumb:active {
		background-color: #486fdb00;
		}
	}


</style>
