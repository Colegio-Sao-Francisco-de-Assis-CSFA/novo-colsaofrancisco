---
import { Carousel } from "../Carousel/index.astro";
import { Icon } from "astro-icon/components";
import { Button } from "../Button/index.astro";
---

<section
    class="difereciais w-full h-[60dvh] bg-yellow-500 space-y-4 p-4 overflow-hidden flex justify-center items-center flex-col"
>
    <h1 class="titulo text-center">Difereciais</h1>

    <div class="w-full max-w-[450px] md:max-w-[1050px]">
        <Carousel.Root
            id="carousel__slide"
            classes="w-full h-full flex flex-row relative group">
            
            <!-- Left -->
            <Carousel.Content id="aside__content" classes="hidden md:content__right block overflow-hidden w-[50%] h-full">
                <h4 id="title__diferencial"></h4>
                <p id="descricao__diferencial"></p>
                <Button.Link id="button__link" link="https://www.instagram.com" target="_blank">
                    <Button.Icon iconName="mdi:instagram" size="md"/>
                    Instagram
                </Button.Link>
            </Carousel.Content>

            <!-- Right -->
            <Carousel.Content
                id="container__image"
                classes="content__full overflow-hidden w-full h-full md:w-[50%] content__left"
            />

            <!-- Controls -->
            <Carousel.Control
                id="controls"
                classes="hidden group-hover:flex w-full h-full absolute justify-between items-center"
            >
                <Carousel.Button
                    classes="w-8 m-2a bg-white/80 h-20 rounded-full text-blue-500 transition-all cursor-pointer z-20 flex items-center justify-center"
                    id="prev__slide"
                >
                    <Icon name="mdi:keyboard-arrow-left" size={35} />
                </Carousel.Button>

                <Carousel.Button
                    classes="w-8 m-2 bg-white/80 h-20 rounded-full text-blue-500 transition-all cursor-pointer z-20 flex items-center justify-center"
                    id="next__slide"
                >
                    <Icon name="mdi:keyboard-arrow-right" size={35} />
                </Carousel.Button>
            </Carousel.Control>

            <!-- Indicators -->
            <Carousel.Indicators
                id="indicators"
                classes="absolute left-[50%] -translate-x-[50%] bottom-4 flex gap-2 justify-center"
            />
        </Carousel.Root>
    </div>
</section>

