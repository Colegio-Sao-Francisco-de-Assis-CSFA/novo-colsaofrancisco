---
interface Props {
  title: string;
  description: string;
  category: string;
  date: string;
  imageUrl: string;
}

const { title, description, category, date, imageUrl } = Astro.props;
---

<article class="max-w-sm overflow-hidden rounded-lg bg-white shadow-lg">
  <div class="relative h-48 w-full">
    <img
      src={imageUrl}
      alt={title}
      class="h-full w-full object-cover"
    />
  </div>
  
  <div class="p-4">
    <h2 class="mb-2 text-xl font-bold text-[#0052CC]">{title}</h2>
    
    <p class="mb-4 text-gray-600">
      {description}
    </p>
    
    <div class="flex items-center justify-between">
      <span class="rounded-full bg-[#0052CC] px-4 py-1 text-sm text-white">
        {category}
      </span>
      <time class="text-sm text-gray-500">
        {date}
      </time>
    </div>
  </div>
</article>